<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center"> Add comments <%= campground.name %></h1>
            <div style="width: 30%; margin: 25px auto;">

                <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
                    <div class="form-group">
                        <textarea id="commentTextarea" rows="4" cols="50" name="comment[text]"></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-sm btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>